{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabicMusicDB instrumental definition",
    "description": "JSON Schema for OpenArabicMusicDB instrumental definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "attachments": {
            "type": "array"
        },
        "composer": {
            "type": "string"
        },
        "form": {
            "enum": ["maqtu3a", "sama3i"]
        },
        "maqamat": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "explanation": {
                        "type": "string"
                    },
                    "maqam": {
                        "type": "string",
                        "enum": ["3ajam", "bayati", "hijaz", "hijaz_kar", "nahawand", "nakriz", "saba"]
                    }
                },
                "required": ["explanation", "maqam"]
            }
        },
        "name": {
            "type": "string"
        },
        "releaseDate": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                }
            ]
        },
        "rhythms": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "explanation": {
                        "type": "string"
                    },
                    "rhythm": {
                        "type": "string",
                        "enum": ["dawr_hindi", "rumba", "sama3i_thaqil"]
                    }
                },
                "required": ["explanation", "rhythm"]
            }
        },
        "text": {
            "type": "string"
        }
    },
    "required": ["attachments", "composer", "form", "maqamat", "name", "rhythms", "text"]
}