{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabicMusicDB instrumental definition",
    "description": "JSON Schema for OpenArabicMusicDB instrumental definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "attachments": {
            "type": "array"
        },
        "composer": {
            "type": "string"
        },
        "form": {
            "enum": ["maqtu3a", "sama3i"]
        },
        "maqamat": {
            "type": "array"
        },
        "name": {
            "type": "string"
        },
        "releaseDate": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                }
            ]
        },
        "rhythms": {
            "type": "array"
        },
        "text": {
            "type": "string"
        }
    },
    "required": ["attachments", "composer", "form", "maqamat", "name", "rhythms", "text"]
}