{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabicMusicDB song definition",
    "description": "JSON Schema for OpenArabicMusicDB song definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "attachments": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "comment": {
                        "type": "string"
                    },
                    "contentType": {
                        "type": "string",
                        "enum": ["application/pdf"]
                    },
                    "type": {
                        "const": "private"
                    },
                    "uri": {
                        "type": "string"
                    }
                },
                "required": ["comment", "contentType", "type", "uri"]
            }
        },
        "composer": {
            "type": "string"
        },
        "dialect": {
            "enum": ["classical", "dz", "eg", "lb", "mixed_classical_egyptian", "mixed_classical_levantine", "mixed_levantine_egyptian", "msa", "north_levantine", "shami"]
        },
        "form": {
            "enum": ["muwashshah", "qadd_halabi", "qasida", "song"]
        },
        "lyrics": {
            "type": "string"
        },
        "maqamat": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "explanation": {
                        "type": "string"
                    },
                    "maqam": {
                        "type": "string"
                    }
                },
                "required": ["explanation", "maqam"]
            }
        },
        "name": {
            "type": "string"
        },
        "releaseDate": {
            "oneOf": [
                {
                    "type": "number"
                }
            ]
        },
        "rhythms": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "explanation": {
                        "type": "string"
                    },
                    "rhythm": {
                        "type": "string",
                        "enum": ["sa3idi"]
                    }
                },
                "required": ["explanation", "rhythm"]
            }
        },
        "singers": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "songWriter": {
            "type": "string"
        },
        "text": {
            "type": "string"
        }
    },
    "required": ["attachments", "composer", "dialect", "form", "lyrics", "maqamat", "name", "rhythms", "singers", "songWriter", "text"]
}